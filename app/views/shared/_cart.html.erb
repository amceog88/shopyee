<h1>購物車</h1>
<hr>
<% current_cart.cart_items.each do |item| %>
  <div class="cart-item">
    <%#= image_tag item.product.image %>
    <div class="cart-item-info">
      <h4><%= item.product.name %></h4>
      $ <%= item.product.price %><br>
      <div class="cart-item-adjust">
        <%= item.quantity %>個
        <%= button_to "取消", remove_from_cart_product_path(item.product), class: "btn btn-default btn-xs" %>
      </div>
    </div>
  </div>
<% end %> 
<hr>     
<div class="subtotal">
  <h4>總共</h4>
  <p>$ <%= current_cart.subtotal %></p>
</div>