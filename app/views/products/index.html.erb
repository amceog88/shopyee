<h1>shopyee前台</h1>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="product-box product_<%= product.id %>">
            <%= link_to product_path(product) do %>
              <div class="image-frame"><%= image_tag product.image, width: "120px" %></div><br>
              <h4><%= product.name %></h4><br>
            <% end %>
            <div class="product-description"><%= truncate(product.description, length: 40) %>
            </div>
            <p>$<%= product.price %></p>
            <%= button_to "加入購物車", add_to_cart_product_path(product) , class: "btn btn-default btn-xs", remote: true %>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <%= paginate @products %>
      </div>
    </div>
    <div class="col-md-3 my-cart">
      <%= render "shared/cart" %>
    </div>
  </div>
</div>

