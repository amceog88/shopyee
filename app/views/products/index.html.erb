<h1>shopyee前台</h1>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="product-box">
            <%= link_to product_path(product) do %>
              <div class="image-frame"><%= image_tag product.image, width: "120px" %></div><br>
              <h4><%= product.name %></h4><br>
            <% end %>
              <p>$<%= product.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

