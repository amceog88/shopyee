<h1>shopyee前台</h1>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="product-box">
            <%= link_to product_path(product) do %>
              <div class="image-frame"><%= image_tag product.image, width: "120px" %></div><br>
              <h4><%= product.name %></h4><br>
            <% end %>
              <div class="product-description"><%= truncate(product.description, length: 40) %></div>
              <p>$<%= product.price %></p>
              <%= button_to "加入購物車", add_to_cart_product_path(product) , class: "btn btn-default btn-xs"%>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <%= paginate @products %>
      </div>
    </div>
    <div class="col-md-3 my-cart">
      <h1>購物車</h1>
      <hr>
      <% current_cart.cart_items.each do |item| %>
      <div class="cart-item">
        <%#= image_tag item.product.image %>
        <div class="cart-item-info">
          <h4><%= item.product.name %></h4>
          $ <%= item.product.price %><br>
          <%= item.quantity %>個
        </div>
      </div>
      <% end %>      
    </div>
  </div>
</div>

